    button {
      padding: 15px 30px;
      margin: 10px;
      font-size: 20px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    #yesBtn {
      background-color: #ff4d6d;
      color: white;
    }
    #noBtn {
      background-color: #555;
      color: white;
      position: absolute;
    }
    #heart {
      display: none;
      font-size: 80px;
      margin-top: 20px;
      animation: heartbeat 1s infinite;
      color: #ff1a75;
    }
    #loveText {
      display: none;
      font-size: 28px;
      font-weight: bold;
      margin-top: 10px;
      color: #d6004c;
      text-shadow: 0 0 10px #ff4d88;
    }
    @keyframes heartbeat {
      0%, 100% { transform: scale(1); }
