<body>
  <h1>Do you love Henry?</h1>
  <button id="yesBtn">Yes</button>
  <button id="noBtn">No</button>
  <div id="heart">ðŸ’—</div>
  <div id="loveText">I love you too Albi</div>  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const heart = document.getElementById('heart');
    const loveText = document.getElementById('loveText');

    let noClickCount = 0;
    let moveRight = true;

    yesBtn.addEventListener('click', () => {
      heart.style.display = 'block';
      loveText.style.display = 'block';
    });

    noBtn.addEventListener('click', () => {
      noClickCount++;
      let size = Math.max(10, 20 - noClickCount);
      noBtn.style.fontSize = size + 'px';
      yesBtn.style.fontSize = (20 + noClickCount * 3) + 'px';

      if (moveRight) {
        noBtn.style.right = '20px';
        noBtn.style.left = '';
      } else {
        noBtn.style.left = '20px';
        noBtn.style.right = '';
      }
      moveRight = !moveRight;

      if (size <= 10) {
        noBtn.style.display = 'none';
      }
    });
  </script></body>
</html>
